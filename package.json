{
  "name": "nexus-sales",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test:security": "snyk test",
    "test:security:auth": "snyk auth",
    "test:load": "artillery run artillery-config.yml",
    "test:load:local": "artillery run artillery-config-local.yml",
    "test:performance": "lighthouse http://localhost:3010 --output json --output html --output-path ./performance-report.json",
    "test:accessibility": "cd apps/web && npx playwright test tests/e2e/accessibility.spec.ts",
    "test:visual": "cd apps/web && npx playwright test tests/e2e/visual-regression.spec.ts",
    "test:contract": "cd apps/web && npm test -- --testPathPattern=contract",
    "test:all": "npm run test:security && npm run test:load:local && npm run test:accessibility && npm run test:contract"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/uuid": "^10.0.0",
    "k6": "^0.0.0",
    "prettier": "^3.6.2",
    "snyk": "^1.1300.0",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": "^18.18.0 || ^19.8.0 || >=20"
  },
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "framer-motion": "^12.23.22",
    "uuid": "^13.0.0",
    "zustand": "^5.0.8"
  }
}
