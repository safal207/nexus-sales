{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@nexus/domain": ["../../packages/domain/src/index.ts"],
      "@nexus/domain/*": ["../../packages/domain/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  // 2025-09-29 - Claude Code Agent: Excluded tests folder from build to prevent Jest/test issues
  "exclude": [
    "node_modules",
    "tests/**/*"
  ]
}
