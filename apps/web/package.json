{
  "name": "web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "jest --config jest.config.mjs",
    "test:watch": "jest --config jest.config.mjs --watch",
    "test:coverage": "jest --config jest.config.mjs --coverage",
    "test:ci": "jest --config jest.config.mjs --ci --coverage --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:integration": "python ../../../test_ai_integration.py",
    "migrate:create": "node-pg-migrate create -m migrations",
    "migrate:up": "node-pg-migrate up -m migrations",
    "migrate:down": "node-pg-migrate down -m migrations",
    "migrate:status": "node-pg-migrate status -m migrations",
    "verify:db": "tsx scripts/verify-db.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.16.2",
    "@repo/ui": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^5.1.1",
    "framer-motion": "^12.23.22",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.0",
    "node-pg-migrate": "^7.6.2",
    "pg": "^8.13.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.2.1",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^18.19.0",
    "@types/pg": "^8.10.7",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.34.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prisma": "^6.16.2",
    "tsx": "^4.19.1",
    "typescript": "5.9.2"
  }
}
